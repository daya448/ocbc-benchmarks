{
    "name": "run-benchmark",
    "default": true,
    "description": "Challenge to close, restore, and benchmark index with specified operations.",
    "schedule": [
      {
        "name": "close-benchmark-index",
        "operation": {
          "operation-type": "raw-request",
          "path": "/vdb910-openai/_close",
          "method": "POST"
        }
      },
      {
        "name": "restore-snapshot",
        "operation": {
          "operation-type": "raw-request",
          "path": "/_snapshot/vdb910_benchmarks_backup_repo/vdb910-openai/_restore",
          "method": "POST",
          "body": {
            "indices": "vdb910-openai"
          }
        }
      },
      {
        "name": "check-cluster-health",
        "operation": {
          "operation-type": "cluster-health",
          "request-params": {
            "wait_for_status": "green",
            "wait_for_active_shards": "true"
          },
          "retry-until-success": true
        }
      },
      {
        "name": "wait-until-merges-finish-after-index",
        "operation": {
          "operation-type": "index-stats",
          "index": "_all",
          "condition": {
            "path": "_all.total.merges.current",
            "expected-value": 0
          },
          "retry-until-success": true,
          "include-in-reporting": false
        }
      },
      {
        "name": "vector-search-knn-10-100-multiple-clients",
        "operation": "knn-search-10-100",
        "warmup-time-period": 120,
        "target-throughput": 150,
        "time-period": 1800,
        "clients": {{ standalone_search_clients | default(4) | int }}
      },
      {
        "name": "index-benchmark",
        "operation": "index-benchmark",
        "warmup-time-period": 60,
        "time-period": 1800,
        "clients": {{ initial_indexing_bulk_indexing_clients | default(2) | int }}
      }
    ]
  }
