{
    "name": "run-benchmark",
    "default": true,
    "description": "Challenge to close, restore, and benchmark index with specified operations.",
    "schedule": [
      {
        "name": "close-benchmark-index",
        "operation": {
          "operation-type": "raw-request",
          "path": "/vdb910-cohere/_close",
          "method": "POST"
        }
      },
      {
        "name": "restore-snapshot",
        "operation": {
          "operation-type": "raw-request",
          "path": "/_snapshot/vdb910/vdb910-cohere/_restore",
          "method": "POST",
          "body": {
            "indices": "vdb910-cohere"
          }
        }
      },
      {
        "name": "index-benchmark",
        "operation": "index-benchmark",
        "warmup-time-period": {{ initial_indexing_bulk_warmup | default(40) | int }},
        "clients": {{ initial_indexing_bulk_indexing_clients | default(1) | int }}
      },
      {
        "name": "vector-search-knn-10-100-multiple-clients",
        "operation": "knn-search-10-100",
        "warmup-iterations": 100,
        "target-throughput": 150,
        "iterations": 10000,
        "clients": {{ standalone_search_clients | default(1) | int }},
        "iterations": {{ standalone_search_iterations | default(10000) | int }}
      },
      {
        "name": "vector-search-knn-100-1000-multiple-clients",
        "operation": "knn-search-100-1000",
        "warmup-iterations": 100,
        "target-throughput": 150,
        "iterations": 10000,
        "clients": {{ standalone_search_clients | default(1) | int }},
        "iterations": {{ standalone_search_iterations | default(10000) | int }}
      }
    ]
  }
