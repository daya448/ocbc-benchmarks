{
  "settings": {
    {# non-serverless-index-settings-marker-start #}{%- if build_flavor != "serverless" or serverless_operator == true -%}
      {% if preload_pagecache %}
    "index.store.preload": [ "vec", "vex", "vem"],
      {% endif %}
    "index.number_of_shards": {{number_of_shards | default(1)}},
    "index.number_of_replicas": {{number_of_replicas | default(0)}},
    "refresh_interval": "8m",
    "index.translog.flush_threshold_age": "8m",
    "index.translog.flush_threshold_size": "1500mb",
    "index.merge.scheduler.max_thread_count": "5",
    "index.merge.scheduler.auto_throttle": false,
    "index.merge.policy.segments_per_tier": 2,
    "index.merge.policy.max_merged_segment": "8gb",
    "index.merge.policy.floor_segment": "512mb",
    "index.merge.policy.deletes_pct_allowed": 5,
    "index.flush_after_merge": "20gb"
    {%- endif -%}{# non-serverless-index-settings-marker-end #}
  },
  "mappings": {
    "_source": {
      "excludes": [ "emb" ]
    },
    "properties": {
      "docid": {
        "type": "keyword"
      },
      "title": {
        "type": "text"
      },
      "text": {
        "type": "text"
      },
      "emb": {
        "type": "dense_vector",
        "element_type": "float",
        "dims": 1024,
        "index": true,
        "similarity": "dot_product",
        "index_options": {
          "type": {{ vector_index_type | default("hnsw") |tojson }}
        }
      }
    }
  }
}
